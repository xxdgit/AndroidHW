<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xxd.weather.MainActivity">

    <FrameLayout
        android:id="@+id/scaleAnimBackLL"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="@color/black">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_fog_and_haze"/>
    </FrameLayout>

 <com.xxd.weather.view.MyScrollView
     android:id="@+id/myScrollView"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:scrollbars="none">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <com.xxd.weather.view.CircleViewPager
             android:id="@+id/myViewPager"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
         </com.xxd.weather.view.CircleViewPager>

     </LinearLayout>
 </com.xxd.weather.view.MyScrollView>

     <FrameLayout
         android:id="@+id/scaleAnimLL"
         android:layout_width="match_parent"
         android:layout_height="400dp"
         android:background="@color/black">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="800dp"
             android:scaleType="centerCrop"
             android:src="@drawable/bg_fog_and_haze"/>

         <ImageView
             android:id="@+id/animCloud1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/fine_day_cloud1"/>

         <ImageView
             android:id="@+id/animCloud2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/fine_day_cloud2"/>
     </FrameLayout>

     <LinearLayout
         android:id="@+id/scaleLL"
         android:layout_width="match_parent"
         android:layout_height="400dp"
         android:paddingTop="50dp"
         android:orientation="vertical"
         android:gravity="center">

         <TextView
             android:id="@+id/cityName"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="珠海市"
             android:textColor="@color/white"
             android:textSize="30sp"/>

         <TextView
             android:id="@+id/cityType"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="阵雨"
             android:textColor="@color/white"
             android:textSize="20sp"/>
         <TextView
             android:id="@+id/cityTemp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="17°"
             android:textColor="@color/white"
             android:textSize="120sp"/>
     </LinearLayout>

     <com.xxd.weather.view.MyViewPagerDots
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:gravity="center">
     </com.xxd.weather.view.MyViewPagerDots>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp">

         <ImageView
             android:id="@+id/optionImage"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_centerVertical="true"
             android:src="@drawable/main_title_setting"/>
         <ImageView
             android:id="@+id/shareImage"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:src="@drawable/common_title_share"/>
     </RelativeLayout>

</RelativeLayout>
